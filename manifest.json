{
  "manifest_version": 3,
  "name": "Grok Video Batch Generator",
  "version": "1.3.0",
  "description": "批量生成Grok视频的Chrome扩展工具",
  "action": {},
  "side_panel": {
    "default_path": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://grok.com/*", "https://*.grok.com/*"],
      "js": ["content/content.js", "content/panel.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "downloads",
    "tabs",
    "activeTab",
    "scripting",
    "sidePanel",
    "notifications"
  ],
  "host_permissions": [
    "https://grok.com/*",
    "https://*.grok.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["content/*", "popup/*"],
      "matches": ["https://grok.com/*", "https://*.grok.com/*"]
    }
  ]
}
